@model Stall

@{
    ViewData["Title"] = "Edit Stall";
}

<h1>Edit Stall</h1>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="biome">Biome:</label>
        <select id="biome" name="Biome" class="form-control" required>
            <option value="Desert">Desert</option>
            <option value="Mountain">Mountain</option>
            <option value="Jungle">Jungle</option>
            <option value="Grass">Grass</option>
            <option value="Swamp">Swamp</option>
            <option value="Pond">Pond</option>
            <option value="Sea/Ocean">Sea/Ocean</option>
            <option value="Beach">Beach</option>
        </select>
    </div>
    <div class="form-group">
        <label for="climate">Climate:</label>
        <select id="climate" name="Climate" class="form-control" required>
            <option value="Tropical">Tropical</option>
            <option value="Temperate">Temperate</option>
            <option value="Desert">Desert</option>
            <option value="Arctic">Arctic</option>
            <option value="Mediterranean">Mediterranean</option>
            <option value="Grassland">Grassland</option>
            <option value="Rainforest">Rainforest</option>
            <option value="Savanna">Savanna</option>
            <option value="Taiga">Taiga</option>
            <option value="Tundra">Tundra</option>
        </select>
    </div>
    <div class="form-group">
        <input type="submit" value="Save Changes" class="btn btn-primary" />
    </div>
</form>
