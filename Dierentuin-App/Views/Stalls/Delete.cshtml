@model Dierentuin_App.Models.Stall

@{
    ViewData["Title"] = "Delete";
}

<div class="row d-flex justify-content-center my-3">
    <div class="col-11 col-md-6 border rounded-3 border-dark p-4 mb-3">
        <!-- Title & Warning Text -->
        <h1>Delete @Html.DisplayFor(model => model.Name) &#10060;</h1>
        <h3 class="mt-3">Are you sure you want to delete this?</h3>
        <!-- Info Lists -->
        <dl class="row mt-4">
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Climate):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Climate)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.HabitatType):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.HabitatType)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.SecurityLevel):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.SecurityLevel)
            </dd>
            <dt class="col-sm-4">
                @Html.DisplayNameFor(model => model.Size):
            </dt>
            <dd class="col-sm-8">
                @Html.DisplayFor(model => model.Size)
            </dd>
        </dl>
        <!-- Delete & Go Back -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="btn btn-secondary">Back to List</a>
        </form>
    </div>
</div>
