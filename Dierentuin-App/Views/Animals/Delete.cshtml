@model Dierentuin_App.Models.Animal

@{
    ViewData["Title"] = "Delete";
}

<div class="row d-flex justify-content-center my-3">
    <div class="col-11 col-md-6 border rounded-3 border-dark p-4 mb-3">
        <!-- Title & Warning Text -->
        <h1>Delete @Html.DisplayFor(model => model.Name) &#10060;</h1>
        <h3 class="mt-3">Are you sure you want to delete this?</h3>
        <!-- Info Lists -->
        <dl class="row mt-4">
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Name):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Species):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Species)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Category):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Size):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Size)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.DietaryClass):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.DietaryClass)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.ActivityPattern):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.ActivityPattern)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Prey):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Prey)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Enclosure):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Enclosure)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.SpaceRequirement):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.SpaceRequirement)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.SecurityRequirement):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.SecurityRequirement)
            </dd>
            <dt class="col-sm-6">
                @Html.DisplayNameFor(model => model.Stall):
            </dt>
            <dd class="col-sm-6">
                @Html.DisplayFor(model => model.Stall.Name)
            </dd>
        </dl>
        <!-- Delete & Go Back -->
        <form asp-action="Delete">
            <input type="hidden" asp-for="Id" />
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <a asp-action="Index" class="text-dark">Back to List</a>
        </form>
    </div>
</div>
