@model Dierentuin_App.Models.Animal

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Animal</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Species" class="control-label"></label>
                <input asp-for="Species" class="form-control" />
                <span asp-validation-for="Species" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Category" class="control-label"></label>
                <input asp-for="Category" class="form-control" />
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Size" class="control-label"></label>
                <select asp-for="Size" class="form-control" asp-items="Html.GetEnumSelectList<Dierentuin_App.Models.Animal.AnimalSize>()">
                    <option>Choose size</option>
                </select>
                <span asp-validation-for="Size" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DietaryClass" class="control-label"></label>
                <select asp-for="DietaryClass" class="form-control" asp-items="@Html.GetEnumSelectList<Dierentuin_App.Models.Animal.AnimalDietaryClass>()">
                    <option value="">Choose dietary class</option>
                </select>
                <span asp-validation-for="DietaryClass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ActivityPattern" class="control-label"></label>
                <select asp-for="ActivityPattern" class="form-control" asp-items="@Html.GetEnumSelectList<Dierentuin_App.Models.Animal.AnimalActivityPattern>()">
                    <option value="">Choose activity pattern</option>
                </select>
                <span asp-validation-for="ActivityPattern" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Prey" class="control-label"></label>
                <input asp-for="Prey" class="form-control" />
                <span asp-validation-for="Prey" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Enclosure" class="control-label"></label>
                <input asp-for="Enclosure" class="form-control" />
                <span asp-validation-for="Enclosure" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SpaceRequirement" class="control-label"></label>
                <input asp-for="SpaceRequirement" class="form-control" type="number" step="any" />
                <span asp-validation-for="SpaceRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SecurityRequirement" class="control-label"></label>
                <select asp-for="SecurityRequirement" class="form-control" asp-items="@Html.GetEnumSelectList<Dierentuin_App.Models.Animal.AnimalSecurityRequirement>()">
                    <option value="">Choose security requirement</option>
                </select>
                <span asp-validation-for="SecurityRequirement" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
