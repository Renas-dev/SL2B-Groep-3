@model IEnumerable<Dierentuin_App.Models.Animal>

@{
    ViewData["Title"] = "Index";
}

<h1>Animal Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>


<!-- Filters -->
<form asp-action="Index" method="get">
    <!-- Size -->
    <label for="sizeDropdown">Size:</label>
    <select id="sizeDropdown" name="size">
        <option value="">All</option>
        @foreach (var size in Enum.GetValues(typeof(Dierentuin_App.Models.Animal.AnimalSize)))
        {
            <option value="@size">@size</option>
        }
    </select>
    <!-- Dietary Class -->
    <label for="dietaryClassDropdown">Dietary Class:</label>
    <select id="dietaryClassDropdown" name="dietaryClass">
        <option value="">All</option>
        @foreach (var dietaryClass in Enum.GetValues(typeof(Dierentuin_App.Models.Animal.AnimalDietaryClass)))
        {
            <option value="@dietaryClass">@dietaryClass</option>
        }
    </select>
    <!-- Activity Pattern -->
    <label for="activityPatternDropdown">Activity Pattern:</label>
    <select id="activityPatternDropdown" name="activityPattern">
        <option value="">All</option>
        @foreach (var activityPattern in Enum.GetValues(typeof(Dierentuin_App.Models.Animal.AnimalActivityPattern)))
        {
            <option value="@activityPattern">@activityPattern</option>
        }
    </select>
    <!-- Security Requirement -->
    <label for="securityRequirementDropdown">Security Requirement:</label>
    <select id="securityRequirementDropdown" name="securityRequirement">
        <option value="">All</option>
        @foreach (var securityRequirement in Enum.GetValues(typeof(Dierentuin_App.Models.Animal.AnimalSecurityRequirement)))
        {
            <option value="@securityRequirement">@securityRequirement</option>
        }
    </select>
    <!-- Search name -->
    <input type="text" name="searchString" placeholder="Search by name" />
    <!-- Search button -->
    <input type="submit" value="Search" />
    <!-- Reset button -->
    <button type="button" onclick="window.location.href='@Url.Action("Index", "Animals")'">Reset</button>
</form>



<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Species)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Size)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DietaryClass)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ActivityPattern)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Prey)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Enclosure)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpaceRequirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SecurityRequirement)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Species)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Size)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DietaryClass)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ActivityPattern)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Prey)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Enclosure)
                </td>
                <!-- Double with two decimals -->
                <td>
                    @item.SpaceRequirement.ToString("N2") m<sup>2</sup>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SecurityRequirement)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
