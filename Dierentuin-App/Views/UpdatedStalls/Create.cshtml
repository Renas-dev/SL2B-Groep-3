@model Dierentuin_App.Models.UpdatedStall

@{
    ViewData["Title"] = "Create";
}

<div class="row d-flex justify-content-center mt-3">
    <div class="col-11 col-md-8 border rounded-3 border-dark p-4 mb-3">
        <form asp-action="Create" class="d-flex flex-column gap-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="">Create Stall</h1>
            <!-- Stall name -->
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="Name" class="control-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Name" placeholder="Insert Stall name" class="form-control border-dark" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <!-- Stall climate -->
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="Climate" class="control-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="Climate" placeholder="Insert Stall Climate" class="form-control border-dark" />
                    <span asp-validation-for="Climate" class="text-danger"></span>
                </div>
            </div>
            <!-- Stall habitat -->
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="HabitatType" class="control-label"></label>
                </div>
                <div class="col-7">
                    <input asp-for="HabitatType" placeholder="Insert Stall Habitat" class="form-control border-dark" />
                    <span asp-validation-for="HabitatType" class="text-danger"></span>
                </div>
            </div>
            <!-- Stall security level -->
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="SecurityLevel" class="control-label"></label>
                </div>
                <div class="col-7">
                    <select asp-for="SecurityLevel" class="form-control border-dark">
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                    </select>
                    <span asp-validation-for="SecurityLevel" class="text-danger"></span>
                </div>
            </div>
            <!-- Stall size -->
            <div class="row form-group">
                <div class="col-5">
                    <label asp-for="Size" class="control-label">Stall Size (Example 12.3)</label>
                </div>
                <div class="col-7">
                    <input asp-for="Size" placeholder="Insert Stall Size" class="form-control border-dark" />
                    <span asp-validation-for="Size" class="text-danger"></span>
                </div>
            </div>
            <!-- Submit button -->
            <div class="row form-group">
                <div class="col-12 col-lg-7 offset-lg-5">
                    <input type="submit" value="Create" class="btn btn-dark w-100" />
                </div>
            </div>
        </form>
        <div class="mt-3">
            <a asp-action="Index" class="text-dark">Back to List</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
