@{
    ViewData["Title"] = "Create";
}

<script>
    function calculateSize() {
        var width = document.getElementById("Width").value;
        var height = document.getElementById("Height").value;
        var size = width + "." + (height < 10 ? "0" + height : height); 
        document.getElementById("Size").value = size;
    }
</script>


<div class="row d-flex justify-content-center mt-3">
    <div class="col-11 col-md-8 border rounded-3 border-dark p-4 mb-3">
        <form asp-action="Create" class="d-flex flex-column gap-4" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <h1 class="">Create Stall</h1>
            <!-- Stall name -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Name</label>
                </div>
                <div class="col-7">
                    <input name="Name" placeholder="Insert Stall name" class="form-control border-dark" />
                </div>
            </div>
            <!-- Stall climate -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Climate</label>
                </div>
                <div class="col-7">
                    <input name="Climate" placeholder="Insert Stall Climate" class="form-control border-dark" />
                </div>
            </div>
            <!-- Stall habitat -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Habitat Type</label>
                </div>
                <div class="col-7">
                    <input name="HabitatType" placeholder="Insert Stall Habitat" class="form-control border-dark" />
                </div>
            </div>
            <!-- Stall security level -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Security Level</label>
                </div>
                <div class="col-7">
                    <select name="SecurityLevel" class="form-control border-dark">
                        <option value="Low">Low</option>
                        <option value="Medium">Medium</option>
                        <option value="High">High</option>
                    </select>
                </div>
            </div>
            <!-- Dropdown for Height -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Height</label>
                </div>
                <div class="col-7">
                    <select id="Height" class="form-control border-dark" onchange="calculateSize()">
                        @for (int i = 1; i <= 99; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Dropdown for Width -->
            <div class="row form-group">
                <div class="col-5">
                    <label>Width</label>
                </div>
                <div class="col-7">
                    <select id="Width" class="form-control border-dark" onchange="calculateSize()">
                        @for (int i = 1; i <= 99; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>

            <!-- Hidden field for combined Size -->
            <input type="hidden" id="Size" name="Size" />

            <!-- Submit button -->
            <div class="row form-group">
                <div class="col-12 col-lg-7 offset-lg-5">
                    <input type="submit" value="Create" class="btn btn-dark w-100" />
                </div>
            </div>
        </form>
        <div class="mt-3">
            <a href="/Index" class="text-dark">Back to List</a>
        </div>
    </div>
</div>
